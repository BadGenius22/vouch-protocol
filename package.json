{
  "name": "vouch-protocol",
  "version": "0.1.0",
  "private": true,
  "description": "Vouch Protocol - Anonymous Reputation Proofs for Solana",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "pnpm --filter @vouch/web dev",
    "dev:verifier": "pnpm --filter @vouch/verifier dev",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:verifier\"",
    "build": "pnpm --filter @vouch/web build",
    "build:verifier": "pnpm --filter @vouch/verifier build",
    "start": "pnpm --filter @vouch/web start",
    "start:verifier": "pnpm --filter @vouch/verifier start",
    "lint": "pnpm --filter @vouch/web lint",
    "typecheck": "pnpm --filter @vouch/web exec tsc --noEmit",
    "circuits:compile": "cd circuits && nargo compile --workspace",
    "circuits:test": "cd circuits && nargo test --workspace",
    "circuits:prove": "cd circuits && nargo prove --workspace",
    "anchor:build": "cargo build-sbf",
    "anchor:test": "bash scripts/anchor-test.sh",
    "anchor:deploy": "pnpm anchor:build && solana program deploy target/deploy/vouch_verifier.so --program-id keys/vouch_verifier-keypair.json --url devnet",
    "anchor:idl:sync": "node scripts/sync-idl.js",
    "test:verifier": "tsx scripts/test-verifier-api.ts",
    "setup:verifier": "tsx scripts/setup-verifier.ts",
    "setup:local": "bash scripts/local-test.sh",
    "clean": "rm -rf node_modules apps/web/node_modules apps/web/.next target circuits/*/target"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.32.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "chai": "^4.3.10",
    "concurrently": "^8.2.2",
    "mocha": "^10.2.0",
    "prettier": "^3.2.0",
    "ts-mocha": "^10.0.0",
    "tsx": "^4.21.0",
    "turbo": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.0.0",
      "react-dom": "^19.0.0",
      "@types/react": "^19.0.0",
      "@types/react-dom": "^19.0.0",
      "bs58": "^5.0.0",
      "ws": "^8.18.0",
      "@solana-mobile/wallet-adapter-mobile": "2.1.3"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "react-native",
        "@babel/*",
        "@react-native/*"
      ],
      "allowedVersions": {
        "react": "19",
        "react-dom": "19",
        "@types/react": "19"
      }
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
