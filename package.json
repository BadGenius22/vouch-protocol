{
  "name": "vouch-protocol",
  "version": "0.1.0",
  "private": true,
  "description": "Vouch Protocol - Anonymous Reputation Proofs for Solana",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "pnpm --filter @vouch/web dev",
    "build": "pnpm --filter @vouch/web build",
    "start": "pnpm --filter @vouch/web start",
    "lint": "pnpm --filter @vouch/web lint",
    "typecheck": "tsc --noEmit",
    "circuits:compile": "cd circuits && nargo compile --workspace",
    "circuits:test": "cd circuits && nargo test --workspace",
    "circuits:prove": "cd circuits && nargo prove --workspace",
    "anchor:build": "anchor build",
    "anchor:test": "anchor test",
    "anchor:deploy": "anchor deploy --provider.cluster devnet",
    "anchor:idl": "anchor idl init --filepath target/idl/vouch_verifier.json",
    "clean": "rm -rf node_modules apps/web/node_modules apps/web/.next target circuits/*/target"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "prettier": "^3.2.0",
    "ts-mocha": "^10.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "pnpm": {
    "overrides": {
      "react": "^18.3.1",
      "react-dom": "^18.3.1",
      "@types/react": "^18.3.0",
      "bs58": "^5.0.0",
      "ws": "^8.18.0"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "react-native",
        "@babel/*",
        "@react-native/*"
      ],
      "allowedVersions": {
        "react": "18",
        "react-dom": "18",
        "@types/react": "18"
      }
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
