# Solana Network
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# Helius API (server-side only - never expose to client)
HELIUS_API_KEY=your_helius_api_key_here

# Quicknode RPC (fallback provider)
# Sign up at https://www.quicknode.com and create a Solana endpoint
NEXT_PUBLIC_QUICKNODE_RPC_URL=https://your-endpoint.solana-devnet.quiknode.pro/your-key

# Program IDs (set after deployment)
NEXT_PUBLIC_VERIFIER_PROGRAM_ID=VouchXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Verifier Service (server-side only)
# Generate with: solana-keygen new --no-bip39-passphrase
# The public key must be registered in the Anchor program
# Format: JSON array [1,2,3,...] or base58 encoded
# VERIFIER_PRIVATE_KEY=

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true
